# API Keys (Required)
OPENROUTER_API_KEY=your_openrouter_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
EACHLABS_API_KEY=your_eachlabs_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_HOST=127.0.0.1
FLASK_PORT=5001
SECRET_KEY=your-secret-key-change-in-production

# File Upload Settings
UPLOAD_FOLDER=uploads
JOBS_FOLDER=jobs
TEMP_FOLDER=temp
MAX_CONTENT_LENGTH=524288000  # 500MB in bytes

# API Configuration
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
EACHLABS_BASE_URL=https://api.eachlabs.ai/v1
API_TIMEOUT=30
API_RETRY_COUNT=3

# Model Settings
GEMINI_MODEL=gemini-2.0-flash
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image
EACHLABS_MODEL=seedance-v1-pro-fast-image-to-video

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS Settings (for production, specify actual domain)
CORS_ORIGINS=*